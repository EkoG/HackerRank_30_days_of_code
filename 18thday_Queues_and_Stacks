class Solution:
    # Write your code here
    def __init__(self):
        self.stack = []  #inicializamos variables porque son de la clase, no del programa
        self.queue = []

    def pushCharacter(self,s): # la variable S es otorgada a nosotros, en la linea 27 o 28
        self.stack.append(s)
    
    def enqueueCharacter(self, s):
        self.queue.insert(0,s)
    
    def popCharacter(self):   # s√≥lo se regresa el elemento y borra, por la estructura del mismo
        return self.stack.pop()
    
    def dequeueCharacter(self):
        return self.queue.pop()
    
# read the string s
s=input()
#Create the Solution class object
obj=Solution()   

l=len(s)
# push/enqueue all the characters of string s to stack
for i in range(l):
    obj.pushCharacter(s[i])
    obj.enqueueCharacter(s[i])
    
isPalindrome=True
'''
pop the top character from stack
dequeue the first character from queue
compare both the characters
''' 
for i in range(l // 2):
    if obj.popCharacter()!=obj.dequeueCharacter():
        isPalindrome=False
        break
#finally print whether string s is palindrome or not.
if isPalindrome:
    print("The word, "+s+", is a palindrome.")
else:
    print("The word, "+s+", is not a palindrome.")    
